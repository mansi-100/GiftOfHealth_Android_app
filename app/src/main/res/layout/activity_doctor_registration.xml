<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form"
    tools:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity2">


        <EditText
            android:id="@+id/f2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="#FF0707"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f1" />

        <EditText
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Email"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f2" />

        <EditText
            android:id="@+id/f9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#F44336"
            android:textColor="#FF0707"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.398"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f7" />

        <EditText
            android:id="@+id/f1"
            android:layout_width="209dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Enter Ref ID"
            android:inputType="textPersonName"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.409"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/f4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Enter PhoneNo"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f3" />

        <EditText
            android:id="@+id/f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:textStyle="bold"
            android:hint="Enter Address"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            app:layout_constraintStart_toStartOf="@+id/f4"
            app:layout_constraintTop_toBottomOf="@+id/f4" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Hospital Address"
            android:inputType="textPersonName"
            android:textColor="#FF0707"
            android:textStyle="bold"
            android:textColorHint="#F44336"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f5" />

        <EditText
            android:id="@+id/f6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Experience"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.395"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/f7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Enter Degree"
            android:inputType="textPersonName"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:textColor="#FF0707"
            android:textColorHint="#F44336"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f6" />

<!--        <EditText-->
<!--            android:id="@+id/f8"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:ems="10"-->
<!--            android:hint="Enter Timing"-->
<!--            android:inputType="time"-->
<!--            android:minHeight="48dp"-->
<!--            android:textColor="#2196F3"-->
<!--            android:textColorHint="#F44336"-->
